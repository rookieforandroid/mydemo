<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <Button
        android:id="@+id/btn_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banner广告循环轮播"/>
    <Button
        android:id="@+id/btn_baidumap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AndroidStudio配置及使用百度地图"/>
    <Button
        android:id="@+id/btn_md5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Md5使用"/>
    <Button
        android:id="@+id/btn_viewpager_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TabLayout实现带Tab页引导的ViewPager"/>
    <Button
        android:id="@+id/btn_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Splash界面以及小圆点动画"/>

    <Button
        android:id="@+id/btn_slidingmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SlidingMenu使用"/>
</LinearLayout>
